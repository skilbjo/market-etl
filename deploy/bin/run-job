#!/usr/bin/env bash
set -eou pipefail

cmd="java $JAVA_OPTS -jar app.jar"

# Prereqs
case $(uname -a) in
  *arm* )
    set +e; eval "${deploy_dir}/apk"; set -e; ;; # set +e when apk not available
esac

case "$@" in
  backfill-* )
    # call like /usr/local/deploy/bin/run-job backfill-equities
    _job=$(echo "$@" | sed 's/backfill-//')

    eval "/usr/local/backfill/job ${_job}"
    ;;
  * )
    exec $cmd $@
    ;;
esac
