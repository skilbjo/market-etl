#!/usr/bin/env bash
set -eou pipefail

cmd="java $JAVA_OPTS -jar app.jar"

# Prereqs
set +e
apk fix || echo 'Unable to reach apk... continuing...'
set -e

case "$@" in
  backfill-* )
    # call like /usr/local/deploy/bin/run-job backfill-equities
    _job=$(echo "$@" | sed 's/backfill-//')

    eval "/usr/local/backfill/job ${_job}"
    ;;
  * )
    exec $cmd $@
    ;;
esac
