#!/usr/bin/env bash
set -eou pipefail

arch=""

case $(uname -a) in
  *amd64* | *x_86* | *x86_64* )
    arch="x86" ;;
  *arm* )
    arch="arm" ;;
esac

img="quay.io/skilbjo/markets-etl:$arch"
job_cmd="usr/local/deploy/bin/run-job"

docker run --rm \
  -e db_jdbc_uri="$(echo $db_jdbc_uri)" \
  -e quandl_api_key="$(echo $quandl_api_key)" \
  "$img" \
  "$job_cmd" $@
